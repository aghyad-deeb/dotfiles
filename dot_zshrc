# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
export PATH="$PATH:$HOME/.rvm/bin"

# opam configuration
[[ ! -r /Users/aghyaddeeb/.opam/opam-init/init.zsh ]] || source /Users/aghyaddeeb/.opam/opam-init/init.zsh  > /dev/null 2> /dev/null


#virtulevnwrapper
export WORKON_HOME=$HOME/.virtualenvs
export VIRTUALENVWRAPPER_PYTHON=/Library/Frameworks/Python.framework/Versions/3.10/bin/python3
source /Library/Frameworks/Python.framework/Versions/3.10/bin/virtualenvwrapper.sh
alias get_idf='. $HOME/esp/esp-idf/export.sh'

# >>> mamba initialize >>>
# !! Contents within this block are managed by 'mamba init' !!
export MAMBA_EXE="/Users/aghyaddeeb/.local/bin/micromamba";
export MAMBA_ROOT_PREFIX="/Users/aghyaddeeb/micromamba";
__mamba_setup="$('/Users/aghyaddeeb/.local/bin/micromamba' shell hook --shell zsh --prefix '/Users/aghyaddeeb/micromamba' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__mamba_setup"
else
    if [ -f "/Users/aghyaddeeb/micromamba/etc/profile.d/micromamba.sh" ]; then
        . "/Users/aghyaddeeb/micromamba/etc/profile.d/micromamba.sh"
    else
        export  PATH="/Users/aghyaddeeb/micromamba/bin:$PATH"  # extra space after export prevents interference from conda init
    fi
fi
unset __mamba_setup
# <<< mamba initialize <<<

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/Users/aghyaddeeb/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/Users/aghyaddeeb/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/Users/aghyaddeeb/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/Users/aghyaddeeb/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

